@import '/static/css/common.wxss';
.settle-wrap {
  height: 100%;
  overflow: hidden;
  box-sizing: border-box;
}
.settle-wrap .lock-wrap {
  position: relative;
  height: calc(100% - 90rpx);
  overflow-x: hidden;
  overflow-y: scroll;
}
.settle-wrap .header {
  line-height: 80rpx;
  padding: 0 20rpx;
  font-size: 26rpx !important;
  height: 80rpx;
  background: rgba(249, 83, 85, 0.05);
  color: #F95355;
}
.settle-wrap .header image {
  width: 44rpx;
  height: 44rpx;
}
.settle-wrap .content {
  background: #FFFFFF !important;
  padding: 20rpx;
}
.settle-wrap .content image {
  margin: 0 5rpx;
}
.settle-wrap .content .icon-v {
  width: 34rpx;
  height: 38rpx;
}
.settle-wrap .content .tag {
  width: 120rpx;
  height: 36rpx;
}
.settle-wrap .content .tag.xianhuo {
  width: 80rpx;
  height: 32rpx;
}
.settle-wrap .content .btn-type view {
  text-align: center;
  margin-left: 20rpx;
  display: inline-block;
  width: 228rpx;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 4rpx;
  color: #FFFFFF;
  background: #008CFF;
}
.settle-wrap .content .rectangle {
  width: 33rpx;
  height: 40rpx;
}
.settle-wrap .content .square {
  width: 32rpx;
  height: 32rpx;
}
.settle-wrap .content .box {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  padding: 20rpx 10rpx;
  background: #fafafa;
}
.settle-wrap .content .box .left {
  justify-content: flex-start;
}
.settle-wrap .content .box .center {
  flex: 1;
}
.settle-wrap .content .box .right {
  justify-content: flex-end;
}
.settle-wrap .content .box .inner > view {
  font-size: 24rpx !important;
  line-height: 52rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  align-items: flex-start;
  width: 340rpx;
  border-bottom: 2rpx solid #ededed;
}
.settle-wrap .content .box .inner > view .left {
  justify-content: flex-start;
}
.settle-wrap .content .box .inner > view .center {
  flex: 1;
}
.settle-wrap .content .box .inner > view .right {
  justify-content: flex-end;
}
.settle-wrap .content .box .inner > view > text:first-child {
  color: #666666 !important;
}
.settle-wrap .content.others {
  margin-top: 20rpx;
}
.settle-wrap .content.others .op-flex-box {
  padding-top: 10rpx;
  align-items: flex-start;
}
.settle-wrap .content.others .op-flex-box view:first-child {
  width: 140rpx;
}
