@import '/static/css/common.wxss';
.user-wrap {
  box-sizing: border-box;
  position: fixed;
  width: 100%;
}
.user-wrap .user-hearder {
  position: relative;
  height: 200rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.user-wrap .user-hearder .icon-group {
  width: 140rpx;
  height: 140rpx;
  border-radius: 4rpx;
  text-align: center;
}
.user-wrap .user-hearder .icon-group image {
  width: 100%;
  height: 100%;
}
.user-wrap .user-content > .op-flex-box {
  position: relative;
  box-sizing: border-box;
}

.user-wrap .popup-content .content {
  padding: 20rpx 50rpx;
}
.user-wrap .popup-content .content view {
  text-align: left;
  height: 80rpx;
  line-height: 80rpx;
}
.user-wrap .popup-content .content .checkbox {
  width: 38rpx;
  height: 38rpx;
  margin-right: 10rpx;
  vertical-align: text-bottom;
}