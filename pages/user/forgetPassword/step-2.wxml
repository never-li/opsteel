<view class="forget-password-wrap bg-white">
    <view class="title color-666 f36">手机号</view>
    <view class="forget-password-input mb80" >
        <view class="lh90">
             <input type="number" class="f34" maxlength="11" placeholder="请输入手机号" placeholder-style="color: #999;" value="{{ mobileValue }}" bindinput='mobileInput' bindconfirm="nextStep" focus />
        </view>
    </view>
    <view class="btn-blue {{ mobileSucc? '' : 'btn-disable' }}" bindtap="nextStep">下一步</view>
    <toast isShowToast="{{ isShowToast }}" title="{{ title }}" icon="{{ icon }}"></toast>
</view>