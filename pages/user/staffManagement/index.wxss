@import '/static/css/common.wxss';
.staff-wrap {
  height: 100%;
}
.staff-wrap .content {
  padding: 20rpx 0 20rpx 30rpx;
}
.staff-wrap .content image {
  width: 44rpx;
  height: 44rpx;
}
.staff-wrap .content .icon-tag {
  position: absolute;
  top: 0;
  left: 0;
}
.staff-wrap .content > .op-flex-box .center.op-flex-box {
  justify-content: flex-start;
  align-items: flex-start;
}
.staff-wrap .content > .op-flex-box .center.op-flex-box view {
  width: 50%;
  padding: 10rpx 0;
}
.staff-wrap .content > .op-flex-box .center.op-flex-box view .color-999 {
  display: inline-block;
  padding-right: 16rpx;
}
.staff-wrap .content > .op-flex-box .center.op-flex-box view .color-999.left {
  width: 78rpx;
}
.staff-wrap .content > .op-flex-box .center.op-flex-box view .color-999.right {
  width: 104rpx;
}
.staff-wrap .content > .op-flex-box .right-box {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  width: 130rpx;
  height: 82rpx;
  border-left: 2rpx solid #f5f5f5;
}
