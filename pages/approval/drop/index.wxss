@import '/static/css/common.wxss';
.application-wrap .wrap-item {
  position: relative;
  background: #FFFFFF;
  padding: 24rpx;
  color: #333333;
  font-size: 28rpx;
}
.application-wrap .wrap-item i {
  font-size: 20rpx;
}
.application-wrap .wrap-item b {
  color: #F95355;
}
.application-wrap .wrap-item .virtue {
  display: inline-block;
  width: 140rpx;
  height: 40rpx;
  line-clamp: 40rpx;
  font-size: 28rpx;
  color: #999999;
  margin-right: 66rpx;
  margin-bottom: 18rpx;
}
.application-wrap .wrap-item .virtue.mb0 {
  margin-bottom: 0;
}
.application-wrap .wrap-item:after {
  display: inline-block;
  content: " ";
  height: 14rpx;
  width: 14rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #999999;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  right: 30rpx;
  margin-top: -6rpx;
}
.top-line {
  width: 100%;
  height: 20rpx;
  background: #FAFAFA;
}
.line {
  width: 100%;
  height: 20rpx;
  background: #E8E8E8;
}
