@import '/static/css/common.wxss';
.index-wrap .wrap-head {
  width: 100%;
  height: 112rpx;
  background: #008CFF;
}
.index-wrap .wrap-head .head-scan {
  padding-left: 20rpx;
}
.index-wrap .wrap-head .head-scan .scan-icon {
  width: 59rpx;
  height: 75rpx;
}
.index-wrap .wrap-head .head-search {
  width: 100%;
  height: 72rpx;
  background: #FFFFFF;
  border-radius: 35rpx;
  margin: 0 20rpx 0 20rpx;
}
.index-wrap .wrap-head .head-search span {
  margin-top: -6rpx;
}
.index-wrap .wrap-head .head-search span .search-icon {
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  margin-right: 22rpx;
  margin-left: 22rpx;
}
.index-wrap .wrap-head .head-search .search-input {
  color: #999999 !important;
  height: 100%;
  font-size: 26rpx;
  line-height: 72rpx;
}
.index-wrap .wrap-banner {
  height: 280rpx;
}
.index-wrap .wrap-banner .slide-image {
  width: 750rpx;
  height: 280rpx;
}
.index-wrap .icons-group {
  padding: 20rpx;
  background: #FFFFFF;
}
.index-wrap .icons-group .group-icon {
  text-align: center;
  flex: 1;
}
.index-wrap .icons-group .group-icon image {
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto;
}
.index-wrap .icons-group .group-icon span {
  font-size: 26rpx !important;
  display: inline-block;
  color: #666666;
}
.index-wrap .icons-group.narrow-box {
  padding: 0  115rpx;
}
.index-wrap .index-border {
  width: 100%;
  height: 10rpx;
  background: #F5F5F5;
}
.index-wrap .area-distributed {
  width: 100%;
}
.index-wrap .area-distributed .title {
  margin: 30rpx 0 0rpx 24rpx;
  position: relative;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #333333;
  padding-left: 18rpx;
}
.index-wrap .area-distributed .title:after {
  content: "";
  width: 8rpx;
  height: 28rpx;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -12rpx;
  background-color: #008CFF;
}
.index-wrap .area-distributed .container {
  height: 650rpx;
}
.index-wrap .area-distributed .container ec-canvas {
  width: 100%;
  height: 100%;
}
.index-wrap .area-distributed .subtitle {
  margin-top: 80rpx;
  margin-bottom: 25rpx;
  font-size: 24rpx;
  color: #333333;
  text-align: center;
}
.index-wrap .area-distributed .table {
  display: inline-block;
  margin: 0 24rpx 30rpx 24rpx;
  border: 1rpx solid #E8E8E8;
}
.index-wrap .area-distributed .table li {
  display: block;
}
.index-wrap .area-distributed .table li span {
  display: inline-block;
  text-align: center;
  line-height: 60rpx;
}
.index-wrap .area-distributed .table .table-title {
  font-size: 24rpx;
  color: #333333;
  background: #F2F9FC;
}
.index-wrap .area-distributed .table .table-title .rank {
  border-top: none;
}
.index-wrap .area-distributed .table .table-title .area {
  border-top: none;
}
.index-wrap .area-distributed .table .table-title .amount {
  border-top: none;
}
.index-wrap .area-distributed .table .rank {
  width: 120rpx;
  height: 60rpx;
  border-right: 1rpx solid #E8E8E8;
  border-top: 1rpx solid #E8E8E8;
}
.index-wrap .area-distributed .table .area {
  width: 285rpx;
  height: 60rpx;
  border-right: 1rpx solid #E8E8E8;
  border-top: 1rpx solid #E8E8E8;
}
.index-wrap .area-distributed .table .amount {
  width: 285rpx;
  height: 60rpx;
  border-top: 1rpx solid #E8E8E8;
}
