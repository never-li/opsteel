@import '/static/css/common.wxss';
.loanDetails-wrap .wrap-box .wrap-title {
  margin-left: 24rpx;
  border-bottom: 2rpx solid #E8E8E8;
}
.loanDetails-wrap .wrap-box .wrap-title .txt {
  display: inline-block;
  font-size: 26rpx;
  color: #666666;
  margin: 34rpx 0 8rpx 0;
}
.loanDetails-wrap .wrap-box .wrap-title .num {
  font-size: 64rpx;
  color: #333333;
  line-height: 90rpx;
  padding-bottom: 21rpx;
  font-size: 700;
}
.loanDetails-wrap .wrap-box .wrap-item .op-flex-box {
  border-bottom: 2rpx solid #E8E8E8;
  padding: 20rpx 0;
  margin-left: 24rpx;
}
.loanDetails-wrap .wrap-box .wrap-item .op-flex-box .name {
  font-size: 26rpx;
  color: #999999;
  line-height: 37rpx;
}
.loanDetails-wrap .wrap-box .wrap-item .op-flex-box .num {
  font-size: 26rpx;
  color: #333333;
  line-height: 37rpx;
  margin-right: 24rpx;
}
.loanDetails-wrap .wrap-box .wrap-item .op-flex-box:last-child {
  border-bottom: none;
}
.loanDetails-wrap .wrap-line {
  width: 100%;
  height: 20rpx;
  background: #F5F5F5;
}
.loanDetails-wrap .item-box .item-title {
  margin-left: 24rpx;
  padding: 20rpx 0 23rpx 0;
  border-bottom: 2rpx solid #E8E8E8;
}
.loanDetails-wrap .item-box .item-title .name {
  font-size: 26rpx;
  color: #333333;
  line-height: 37rpx;
}
.loanDetails-wrap .item-box .item-title .num {
  font-size: 24rpx;
  color: #666666;
  line-height: 33rpx;
  margin-right: 24rpx;
}
.loanDetails-wrap .item-box .item-title .num b {
  color: #F95355;
}
.loanDetails-wrap .item-box .item-item-box {
  margin-top: 26rpx;
  margin-left: 24rpx;
}
.loanDetails-wrap .item-box .item-item-box .item {
  display: inline-block;
  padding-bottom: 13rpx;
  margin-bottom: 26rpx;
  border-bottom: 2rpx solid #E8E8E8;
}
.loanDetails-wrap .item-box .item-item-box .item > view {
  width: 50%;
  display: inline-block;
  font-size: 24rpx;
  color: #333333;
  line-height: 33rpx;
  margin-bottom: 13rpx;
}
.loanDetails-wrap .item-box .item-item-box .item > view text {
  display: inline-block;
  width: 96rpx;
  color: #999999;
  margin-right: 14rpx;
}
.loanDetails-wrap .item-box .item-item-box .item > view span {
  font-size: 20rpx;
  color: #F95355;
}
.loanDetails-wrap .item-box .item-item-box .item > view b {
  color: #F95355;
}
.loanDetails-wrap .item-box .item-item-box .item:last-child {
  border-bottom: none;
  margin-bottom: 0rpx;
}
