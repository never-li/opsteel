@import '/static/css/common.wxss';
.finance-wrap .wrap-head {
  position: relative;
  height: 337rpx;
}
.finance-wrap .wrap-head .head-data text {
  display: block;
  text-align: center;
  color: #FFFFFF;
}
.finance-wrap .wrap-head .head-data text.txt {
  padding-top: 73rpx;
  font-size: 26rpx;
  line-height: 37rpx;
  margin-bottom: 9rpx;
}
.finance-wrap .wrap-head .head-data text.num {
  font-size: 70rpx;
  line-height: 98rpx;
}
.finance-wrap .wrap-head .head-item {
  position: absolute;
  width: 690rpx;
  height: 130rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  top: 250rpx;
  left: 0;
  right: 0;
  margin: auto;
  box-shadow: 0 2rpx 20rpx 0 rgba(66, 123, 176, 0.2);
  border-radius: 12rpx;
}
.finance-wrap .wrap-head .head-item .item {
  position: relative;
  text-align: center;
}
.finance-wrap .wrap-head .head-item .item .txt {
  font-size: 24rpx;
  color: #999999;
  line-height: 33rpx;
  margin-bottom: 6rpx;
}
.finance-wrap .wrap-head .head-item .item .num {
  font-size: 32rpx;
  color: #333333;
  line-height: 45rpx;
}
.finance-wrap .wrap-head .head-item .item:after {
  content: "";
  position: absolute;
  right: 0;
  top: 50%;
  width: 0;
  height: 80rpx;
  margin-top: -40rpx;
  border-right: 2rpx solid #E8E8E8;
}
.finance-wrap .wrap-item {
  padding-top: 110rpx;
  padding: 110rpx 24rpx 0;
  background: #FFFFFF;
}
.finance-wrap .wrap-item .item .name {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #333333;
  margin: 30rpx 0;
}
.finance-wrap .wrap-item .item .msg {
  margin-right: 24rpx;
}
.finance-wrap .wrap-item .item .msg .using {
  text-align: left;
  margin: 15rpx 0;
}
.finance-wrap .wrap-item .item .msg .using text {
  display: block;
  font-size: 26rpx;
  line-height: 37rpx;
  color: #666666;
}
.finance-wrap .wrap-item .item .msg .unused {
  color: #F95355;
}
.finance-wrap .wrap-item .item .gray {
  border-color: #999999;
}
.finance-wrap .wrap-add {
  margin-top: 11rpx;
}
.finance-wrap .wrap-add image {
  width: 750rpx;
  height: 180rpx;
}
