@import '/static/css/common.wxss';
.select-compoents {
  background: #FFFFFF;
}
.select-compoents .detail .item .bale-title {
  padding-top: 24rpx;
  position: relative;
}
.select-compoents .detail .item .bale-title image {
  margin-top: 0;
}
.select-compoents .detail .item .bale-title .bale-num {
  font-size: 24rpx;
  color: #999999;
  padding-bottom: 23rpx;
  margin-left: 76rpx;
}
.select-compoents .detail .item .bale-title .bale-num b {
  font-size: 26rpx;
  color: #333333;
  margin-left: 14rpx;
}
.select-compoents .detail .item .bale-detail {
  margin-top: 18rpx;
  font-size: 0rpx;
  margin-left: 76rpx;
  padding-bottom: 23rpx;
  border-bottom: 2rpx solid #E8E8E8;
}
.select-compoents .detail .item .bale-detail .norm {
  display: inline-block;
  width: 50%;
  padding-bottom: 13rpx;
  font-size: 24rpx;
}
.select-compoents .detail .item .bale-detail .norm text {
  line-height: 33rpx;
  color: #999999;
}
.select-compoents .detail .item .bale-detail .norm .content {
  width: 200rpx;
  line-height: 33rpx;
  display: inline-block;
  vertical-align: text-top;
  margin-left: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
  word-wrap: break-word;
}
.select-compoents .detail .item .bale-detail .norm .sum {
  display: inline-block;
  vertical-align: text-top;
  font-size: 30rpx;
  line-height: 33rpx;
  color: #F95355;
  margin-left: 20rpx;
}
.select-compoents .detail .item .bale-detail .norm .sum b {
  font-size: 24rpx;
}
.select-compoents .detail .item:last-child .bale-num {
  border-bottom: none;
}
.select-compoents .detail .item:last-child .bale-detail {
  border-bottom: none;
  margin-bottom: 0rpx;
}
.select-compoents .select-all {
  position: relative;
  padding-left: 76rpx;
}
.select-compoents .select-all .check-all {
  padding: 24rpx 0;
}
.select-compoents .select-all .checkbox {
  top: 25rpx;
}
.select-compoents .select-all .chosen {
  font-size: 24rpx;
  color: #333333;
  line-height: 33rpx;
}
.select-compoents .select-all .chosen b {
  color: #F95355;
}
.select-compoents .select-all .txt {
  font-size: 24rpx;
  color: #999999;
  margin-right: 20rpx;
  line-height: 33rpx;
}
.select-compoents .select-all .collapse {
  margin-right: 24rpx;
  color: #008CFF;
  line-height: 33rpx;
  padding: 24rpx 0;
}
.select-compoents .select-all .op-down-arrow {
  vertical-align: bottom;
}
.select-compoents .checkbox {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  width: 38rpx;
  height: 38rpx;
}
