.popup-content {
  width: 690rpx;
  top: 20%;
}
.popup-content .content {
  padding: 0;
}
.popup-content .content .back {
  position: absolute;
  top: 21rpx;
  left: 23rpx;
  width: 42rpx;
  height: 42rpx;
  padding: 10rpx;
}
.popup-content .content .back::after {
  content: '';
  position: absolute;
  top: 0;
  right: 31rpx;
  width: 2rpx;
  height: 42rpx;
  transform: rotate(-45deg);
  background: #999999;
}
.popup-content .content .back::before {
  content: '';
  position: absolute;
  top: 0;
  right: 31rpx;
  width: 2rpx;
  height: 42rpx;
  transform: rotate(45deg);
  background: #999999;
}
.popup-content .content .title {
  margin-top: 30rpx;
  text-align: center;
  font-size: 34rpx;
  color: #030303;
  line-height: 48rpx;
  letter-spacing: -0.09rpx;
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid #F5F5F5;
}
/* 支付密码框 */
.pay_number {
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  border: 1px solid #ccc;
  /* border-radius:10rpx; */
}
.pay_number_interval {
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  border-left: 1px solid #ccc;
  /* border:none; */
}
/* 第一个格子输入框 */
.content .noBorder {
  border-left: none;
}
/* 支付密码框聚焦的时候 */
.get_focus {
  border-color: #999999;
}
/* 单个格式样式 */
.password_dot {
  flex: 1;
  border-left: 1px solid #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
}
.password_dot_interval {
  flex: 1;
  border: 1px solid #ccc;
  margin-right: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 单个格式样式（聚焦的时候） */
.get_focus_dot {
  flex: 1;
  border-left: 1px solid #999999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.get_focus_dot_interval {
  flex: 1;
  border: 1px solid #999999;
  margin-right: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 模拟光标 */
.cursor {
  width: 1px;
  height: 15px;
  background-color: #999999;
  animation: focus 0.7s infinite;
}
/* 光标动画 */
@keyframes focus {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
/* 格式中的点 */
.dot {
  width: 10px;
  height: 10px;
  background-color: #000;
  border-radius: 50%;
}
/* 输入框 */
.input_container {
  height: 0;
  width: 0;
  min-height: 0;
  position: relative;
  text-indent: -999em;
  left: -100%;
}
