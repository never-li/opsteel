.op-toast {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999999;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
}
.op-toast .content {
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
  min-width: 260rpx;
  max-width: 360rpx;
  padding: 20rpx;
  text-align: center;
  color: white;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 16rpx;
}
.op-toast .content .icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 10rpx;
}
.op-toast .content .title {
  font-size: 28rpx;
}
