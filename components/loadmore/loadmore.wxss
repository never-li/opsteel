.op-load-more-box {
  display: flex;
  justify-content: center;
  color: #999999;
  background: #f5f5f5;
  padding: 40rpx 0;
}
.op-load-more-box .loading-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  margin-top: 3rpx;
  animation: iconLoadingFrames 0.8s infinite linear;
  padding: 0;
  text-align: center;
}
.op-load-more-box .loading-icon image {
  margin: 0;
  display: block;
  width: 100%;
  height: 100%;
}
.op-load-more-box .loading-text {
  font-size: 26rpx;
}
@keyframes iconLoadingFrames {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
