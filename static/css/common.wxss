/* 蓝 大 */
.btn-blue {
  width: 630rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin: 0 auto;
  border-radius: 8rpx;
  background: #008CFF;
  color: #FFFFFF;
  font-size: 32rpx;
  text-align: center;
}
.btn-blue.btn-disable {
  background-color: #cccccc !important;
}
/* 蓝底部 */
.btn-bottom {
  position: absolute;
  bottom: 0;
  z-index: 1;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #008CFF;
  color: #FFFFFF;
  font-size: 32rpx;
  text-align: center;
}
.btn-bottom.disable {
  background: #cccccc !important;
  color: #FFFFFF !important;
}
/* 小 */
.btn-sm {
  font-size: 30rpx !important;
  font-weight: bold !important;
  text-align: center;
  display: inline-block;
  color: #FFFFFF;
  background: #FF7700;
  border: 2rpx solid #FF7700;
  border-radius: 4rpx;
  width: 190rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.btn-sm.delete {
  color: #008CFF;
  background: #FFFFFF;
  border: 2rpx solid #008CFF;
}
.btn-sm.disable {
  background: #cccccc !important;
  color: #FFFFFF !important;
  border-color: #cccccc !important;
}
/* 两个 左白右蓝 底部 */
.btn-group {
  position: absolute;
  right: 0;
  bottom: 0;
  z-index: 1;
  display: flex;
  width: 100%;
  box-sizing: border-box;
}
.btn-group > view {
  height: 88rpx;
  line-height: 88rpx;
  flex: 1;
  text-align: center;
  border: 2rpx solid #008CFF;
  border-radius: 0;
  font-size: 30rpx;
}
.btn-group > view.left {
  background: #FFFFFF;
  color: #008CFF;
}
.btn-group > view.right {
  background: #008CFF;
  color: #FFFFFF;
}
.btn-group > view.disable {
  background: #cccccc !important;
  color: #FFFFFF !important;
  border-color: #cccccc !important;
}
/* 自定义弹框 */
.popup-mask {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background: rgba(0, 0, 0, 0.3);
}
.popup-mask.show {
  display: block;
}
/* 中间弹框 */
.popup-content {
  display: none;
  position: fixed;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
  width: 500rpx;
  background: #FFFFFF;
  border-radius: 10rpx;
  transition: all 0.3s;
}
.popup-content.show {
  display: block;
}
.popup-content .content {
  color: #999999 !important;
  width: 100%;
  position: absolute;
  bottom: 100rpx;
  padding: 50rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  text-align: center;
  background: #FFFFFF;
  border-radius: 10rpx 10rpx 0 0;
}
.popup-content .button-group {
  display: flex;
  width: 100%;
  position: absolute;
  bottom: 0;
  height: 99rpx;
  line-height: 99rpx;
  background: #FFFFFF;
  border-radius: 0 0 10rpx 10rpx;
  font-size: 30rpx !important;
  border-top: 2rpx solid #E8E8E8;
}
.popup-content .button-group .gray {
  text-align: center;
  color: #999999 !important;
  border-right: 2rpx solid #E8E8E8;
  flex: 1;
}
.popup-content .button-group .green {
  text-align: center;
  color: #008CFF !important;
  flex: 1;
}
/* 底部弹框 */
.popup-bottom-content {
  position: fixed;
  bottom: -100%;
  left: 0;
  z-index: 100;
  width: 100%;
  height: 500rpx;
  background: #FFFFFF;
  transition: all 0.3s;
}
.popup-bottom-content.show {
  bottom: 0;
}
.popup-bottom-content .button-group {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 34rpx;
  border-bottom: 2rpx solid #E8E8E8;
}
.popup-bottom-content .button-group .gray {
  padding: 0 30rpx;
  color: #888888;
}
.popup-bottom-content .button-group .green {
  padding: 0 30rpx;
  color: #0ABA07;
}
.popup-bottom-content .mask-content {
  height: 350rpx;
  padding: 20rpx;
}
.popup-bottom-content .mask-content > view {
  text-align: center;
  line-height: 100rpx;
  justify-content: center;
}
.popup-bottom-content .mask-content > view text {
  margin-right: 10rpx;
  margin-left: 10rpx;
}
.popup-bottom-content .mask-content > view input {
  border: 2rpx solid #E8E8E8;
  display: inline-block;
  width: 160rpx;
}
/*
        加载动画
    */
@keyframes iconLoadingFrames {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
