/*
        超出省略号
        op-line-1:超过1行就显示省略号
        op-line-n:超过n行就显示省略号
    */
.op-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
  word-wrap: break-word;
}
.op-line-1,
.op-line-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
.op-line-1 {
  -webkit-line-clamp: 1;
}
.op-line-2 {
  -webkit-line-clamp: 2;
}
/*
        左浮动
    */
.fl {
  float: left;
}
/*
        右浮动
    */
.fr {
  float: right;
}
/*
        清除浮动
    */
.clear::after {
  content: " ";
  display: block;
  height: 0;
  width: 0;
  overflow: hidden;
  clear: both;
}
/*
        右箭头
    */
.op-right-arrow {
  display: inline-block;
  position: relative;
  width: 30rpx;
  height: 30rpx;
  margin-top: -6rpx;
}
.op-right-arrow::after {
  display: inline-block;
  content: " ";
  height: 14rpx;
  width: 14rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #999999;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: calc(50% - 1.5rpx);
}
/*
        下箭头
    */
.op-down-arrow {
  display: inline-block;
  position: relative;
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
.op-down-arrow.gray::after {
  border-color: #999999;
}
.op-down-arrow::after {
  display: inline-block;
  content: " ";
  height: 12rpx;
  width: 12rpx;
  border-width: 0 2rpx 2rpx 0;
  border-color: #008CFF;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform-origin: center;
  transition: transform 0.3s;
  position: absolute;
  top: calc(50% - 9rpx);
  right: 10rpx;
}
/*
        上箭头
    */
.op-down-arrow.active::after {
  transform-origin: center;
  transform: rotate(-135deg);
  transition: transform 0.3s;
}
/*
        三角形
    */
.op-triangle {
  display: inline-block;
  position: relative;
  top: 8rpx;
  margin-left: 6rpx;
  width: 0;
  height: 0;
  border: 12rpx solid transparent;
  border-top-color: #666666;
}
/*
        加载更多动画loading
    */
.op-load-more-box {
  display: flex;
  justify-content: center;
  color: #999999;
  padding: 40rpx 0;
}
.op-load-more-box .loading-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  margin-top: 3rpx;
  animation: iconLoadingFrames 0.8s infinite linear;
  padding: 0;
  text-align: center;
}
.op-load-more-box .loading-icon image {
  margin: 0;
  display: block;
  width: 100%;
  height: 100%;
}
.op-load-more-box .loading-text {
  font-size: 26rpx;
}
/*
        flex布局
    */
.op-flex-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}
.op-flex-box .left {
  justify-content: flex-start;
}
.op-flex-box .center {
  flex: 1;
}
.op-flex-box .right {
  justify-content: flex-end;
}
.op-flex-box > view:not(.op-flex-box),
.op-flex-box > div:not(.op-flex-box),
.op-flex-box > span:not(.op-flex-box),
.op-flex-box > p:not(.op-flex-box),
.op-flex-box > text:not(.op-flex-box),
.op-flex-box > a,
.op-flex-box > em {
  display: inline-block;
}
